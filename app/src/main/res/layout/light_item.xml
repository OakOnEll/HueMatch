<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?android:listSelector"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height"
    android:layout_marginEnd="@dimen/column_margin"
    android:layout_marginStart="@dimen/light_row_padding"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_marginStart="@dimen/text_margin" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin"
        android:contentDescription="@string/image_access_bulb_type"
        app:srcCompat="@drawable/white_e27" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin"
        tools:text="Couch left light" />

    <Spinner
        android:id="@+id/screen_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>